{
  "name": "ClinicBook",
  "short_name": "CB",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#c2e1ff",
  "theme_color": "#afd7ff",
  "description": "Book appointments with top doctors and clinics across India. Fast, easy, and secure.",
  "icons": [
    {
      "src": "/static/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/static/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/static/screenshots/home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "/static/screenshots/mobile.png",
      "sizes": "400x800",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "shortcuts": [
    {
      "name": "Book Appointment",
      "short_name": "Book",
      "description": "Quickly book a doctor appointment",
      "url": "/book"
    },
    {
      "name": "My Dashboard",
      "short_name": "Dashboard",
      "description": "Go to patient dashboard",
      "url": "/dashboard"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+clinic",
      "url": "/book?query=%s"
    }
  ],

  "display_override": ["window-controls-overlay"],
  "scope": "/",
  "orientation": "portrait-primary",
  "lang": "en",
  "dir": "ltr"
}
